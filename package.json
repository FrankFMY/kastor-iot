{
	"name": "kastor-iot",
	"version": "0.0.1",
	"private": true,
	"license": "UNLICENSED",
	"author": {
		"name": "Прянишников Артём Алексеевич",
		"email": "Pryanishnikovartem@gmail.com",
		"url": "https://github.com/FrankFMY"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && bun run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:coverage": "vitest run --coverage",
		"test:all": "bun run test && bun run test:e2e",
		"db:start": "docker compose up -d",
		"db:stop": "docker compose down",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "bun run scripts/seed.ts",
		"db:reset": "bun run db:push && bun run db:seed"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/mqtt": "^2.5.0",
		"@types/node": "^25",
		"@vitest/browser-playwright": "^4.0.17",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.16",
		"svelte": "^5.46.3",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.17",
		"vitest-browser-svelte": "^2.0.1"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"iot",
		"industrial",
		"dashboard",
		"monitoring",
		"mqtt",
		"timescaledb",
		"real-time",
		"gas-engines"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/FrankFMY/kastor-IoT"
	},
	"homepage": "https://github.com/FrankFMY/kastor-IoT#readme",
	"bugs": {
		"url": "https://github.com/FrankFMY/kastor-IoT/issues"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"arctic": "^3.7.0",
		"better-auth": "^1.4.12",
		"clsx": "^2.1.1",
		"echarts": "^6.0.0",
		"ioredis": "^5.9.1",
		"lucide-svelte": "^0.562.0",
		"mqtt": "^5.14.1",
		"postgres": "^3.4.8",
		"svelte-echarts": "^1.0.0",
		"svelte-i18n": "^4.0.1",
		"svelte-motion": "^0.12.2",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.3.5"
	}
}
